@model IEnumerable<ProcurementErp.ViewModels.ContactedVendorViewModel>
@{
    ViewBag.Title = "EditRFIVendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewBag.Title = "EditRFPVendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header" id="RequestHistoryContainer">
        <h1>
            Update Request For Information
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="">New Request</li>
            <li class="active">RFI</li>
        </ol>
    </section>
    <section class="content" id="Roles">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <p style="text-transform:uppercase">
                            <strong>Add Vendors</strong>
                        </p>
                    </div>
                    <!--Req form II -->
                    <div class="box-body">
                        <div class="col-md-11 col-md-offset-1">
                            @using (Html.BeginForm("UpdateRFIVendor", "UpdateRequest", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", id = "NewRequestForm" }))
                            {
                                <div class="box-body">
                                    <div class="form-group col-md-12">
                                        <div class="col-md-8 col-md-offset-2">
                                            <label for="BranchName" class="control-label">
                                                <span class="text-info">
                                                    Type or select from the drop down list, hit the tab key to commit
                                                </span>
                                            </label>
                                            <input type="text" list="vendorslist" class="form-control" id="VENDORS" name="VENDORS" placeholder="">
                                            <datalist id="vendorslist">
                                                @foreach (var item in ViewBag.SelectItems)
                                                {
                                                    <option value="@item.Text" data-vendor="@item.Value" />
                                                }
                                            </datalist>
                                        </div>
                                    </div>
                                    <div class="form-group col-md-10 col-md-offset-1">
                                        <table class="table table-responsive table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Selected Vendor</th>
                                                    <th>Vendor Email</th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody id="SelectedVendors"></tbody>
                                        </table>
                                    </div>

                                    <div class="form-group col-md-10 col-md-offset-1">
                                        <table class="table table-responsive table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>&nbsp;</th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody id="ContactedVendors">
                                                @if (Model != null)
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@item.VENDOR_NAME</td>
                                                            <td>@item.AUTO_EMAIL</td>
                                                            @Html.HiddenFor(model => item.ID)
                                                            @Html.HiddenFor(model => item.VENDOR_ID)
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="form-group col-md-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>

                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
<script src="~/JsFiles/VendorAppender.js"></script>
}
