@model ProcurementErp.ViewModels.VendorResponseViewModel
@{
    ViewBag.Title = "ResponseList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @Model.RequestType.REQUEST_NAME
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class=""> @Model.RequestType.REQUEST_SHORTCODE</li>
            <li class="active">Vendor Response</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">Vendors Response</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Request Type</th>
                                    <th>Reference Number</th>
                                    <th>Vendor Name</th>
                                    <th>Contact Email</th>
                                    <th>Reponse Date</th>
                                    <th>Response Time</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody id="RequestData">
                                @if (Model.ContactedVendor != null)
                                {
                                    int count = 1;
                                    foreach (var item in Model.ContactedVendor)
                                    {
                                        <tr id="@count">
                                            <td>@Model.RequestType.REQUEST_NAME</td>
                                            <td>
                                               @Model.RefNum.REF_NO
                                            </td>
                                            <td>@item.VENDOR_NAME</td>
                                            <td>@item.AUTO_EMAIL</td>
                                            <td>@((item.RESPONSE_DATE != null)?item.RESPONSE_DATE.Value.ToShortDateString():"")</td>
                                            <td>@((item.RESPONSE_DATE != null) ? item.RESPONSE_DATE.Value.ToShortTimeString() : "")</td>
                                            <td>
                                                @switch (Convert.ToString(Model.RefNum.REQ_TYPE))
                                                {
                                                    case "1":
                                                        <a class="btn btn-small btn-primary" href="@Url.Action("RFIVendorResponse", "VendorResponse", new { TempId = item.TEMP_NO, VendorId = item.VENDOR_ID })">View</a>
                                                        break;
                                                    case "2":
                                                    <a class="btn btn-small btn-primary" href="@Url.Action("RFPVendorResponse", "VendorResponse", new { TempId = item.TEMP_NO, VendorId = item.VENDOR_ID })">View</a>
                                                        break;
                                                    case "3":
                                                    <a class="btn btn-small btn-primary" href="@Url.Action("RFQVendorResponse", "VendorResponse", new { TempId = item.TEMP_NO, VendorId = item.VENDOR_ID })">View</a>
                                                        break;
                                                }

                                        </td>
                                        </tr>
                                            count++;

                                    }
                                    
                                }
                                </tbody>
                        </table>
                        @if (Model.RequestType != null)
                        {
                            if (Model.RequestType.REQUEST_SHORTCODE != "RFI" && Model.ContactedVendor != null)
                           {
                            <div class="text-center">
                                <a href="@Url.Action("RFPAnalysis", "ResponseAnalysis", new { TempNo = Model.ContactedVendor.FirstOrDefault().TEMP_NO})" class="btn btn-success">Compare Response</a>
                            </div>
                           }
                        }
                        
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <!-- Main row -->
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>
@section scripts {
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/plugins/datatables/dataTables.bootstrap.js")"></script>
    <script>
  $(function () {
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });

    $('#RequestData tr').each(function () {
        var id = $(this).attr('id');
        var startDate = "@DateTime.Now.ToShortDateString()";
        var endDate = $('.DueDate_' + id).text();
        var date1 = new Date(startDate);
        var date2 = new Date(endDate);
        var timeDiff = Math.abs(date2.getTime() - date1.getTime());
        var diffDays = Math.ceil(timeDiff / (1000 * 3600 * 24));
        $('.DaysLeft_' + id).text(diffDays + " Days Left");
    });
  });
    </script>
}