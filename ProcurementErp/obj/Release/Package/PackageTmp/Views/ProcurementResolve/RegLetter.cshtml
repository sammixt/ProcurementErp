@model ProcurementErp.ViewModels.LorVendorViewModel
@{
    ViewBag.Title = "RegLetter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header" id="RequestHistoryContainer">
        <h1>
            Letter of Regret
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Admin")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="#">Vendor Response</li>
            <li class="active">LOR</li>
        </ol>
    </section>
    <section class="content" id="Roles">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <p class="text-bold" style="text-transform:uppercase">
                           @Model.VendorName
                        </p>
                        <div class="box-tools pull-right">
                            <span class="text-bold text-info Timer"></span>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!--Req form II -->
                    <div class="box-body">
                        <div class="col-md-12 row-border">
                            <div class="col-md-6 col-md-offset-3">
                                <h4 class="text-bold text-center text-uppercase">regret letter</h4>
                                <br />
                                <em>@DateTime.Today.ToShortDateString()</em>
                                <br /><br />
                                <p>
                                    <strong>Subject: @Model.RefNum and your proposal dated @DateTime.Today.AddHours(24).ToShortDateString()</strong>
                                </p>
                                <p style="font-family:Verdana, Geneva, Tahoma, sans-serif;font-size:14px;">
                                    Thank you for the time and effort your company dedicated to responding to the aforementioned request.<br />
                                    After conducting a comprehensive evaluation, we regret to inform you that your company's proposal has not been selected.<br /><br />
                                    On behalf of UBN thank you for the interest your company has displayed regarding this project <br /><br />
                                    Sincerely,<br /><br />
                                    <em>@Model.InitiatorName</em><br/>
                                    Procurement & Vendor Management
                                </p>
                            </div>
                            <br /><br />
                            <div class="col-md-12 text-center">
                                <a href="#" class="btn btn-md btn-adn">Back</a>
                            </div>
                            
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
