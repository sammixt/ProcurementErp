
@{
    ViewBag.Title = "RFPFormIII";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header" id="RequestHistoryContainer">
        <h1>
            New Request For Proposal
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="">New Request</li>
            <li class="active">RFP</li>
        </ol>
    </section>
    <section class="content" id="Roles">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <p class="text-bold" style="text-transform:uppercase">
                            New RFP REQUEST
                        </p>
                    </div>
                    <!--Req form II -->
                    <div class="box-body">
                        <div class="col-md-11 col-md-offset-1">
                            <div class="form-group col-md-12">
                                
@using (Html.BeginForm("RFPFormIII", "Request", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", id = "NewRequestForm", @class = "box-body", @onsubmit = "return checkVendorBeforeSubmit('SelectedVendors')" }))
                            {
                                    <div class="box-body">
                                        <div class="form-group col-md-12">
                                            <div class="col-md-8 col-md-offset-2">
                                                <label for="BranchName" class="control-label">
                                                    <span class="text-info">
                                                        Type or select from the drop down list, hit the tab key to commit
                                                    </span>
                                                </label>
                                                <input type="text" list="vendorslist" class="form-control" id="VENDORS" name="VENDORS" placeholder="">
                                                <datalist id="vendorslist">
                                                    @foreach (var item in ViewBag.SelectItems)
                                                    {
                                                        <option value="@item.Text" data-vendor="@item.Value" />
                                                    }
                                                </datalist>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-10 col-md-offset-1">
                                            <table class="table table-responsive table-striped table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>Selected Vendor</th>
                                                        <th>Vendor Email</th>
                                                        <th>&nbsp;</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="SelectedVendors"></tbody>
                                            </table>
                                        </div>

                                        <div class="form-group col-md-12 col-md-offset-3">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>

                                    </div>

}
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
@section scripts{
<script src="~/JsFiles/VendorAppender.js"></script>
}