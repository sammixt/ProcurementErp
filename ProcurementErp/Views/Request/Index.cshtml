@model ProcurementErp.ViewModels.RequestTypeViewModel
@{
    ViewBag.Title = "New Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header" id="RequestHistoryContainer">
        <h1>
            New Request
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Create Role</li>
        </ol>
    </section>
    <section class="content" id="Roles">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <p>
                            Create New Request
                        </p>
                    </div>
                    <div class="box-body">
                        @using (Html.BeginForm("Index", "Request", FormMethod.Post, new { role = "form", @class = "form col-md-6 col-md-offset-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal panel-body">
                               @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group col-md-8 col-offset-2">
                                @Html.LabelFor(model => model.REQUEST_NAME, htmlAttributes: new { @class = "control-label" })
                                <br/><br/>
                                
                                <select asp-for="Model._Request" class="form-control" name="REQUEST_ID">
                                    @foreach(var item in Model._Request){
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

