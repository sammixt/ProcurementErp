
@{
    ViewBag.Title = "RFIResponse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Responed to the RFI
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">RFI</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <form action="@Url.Action("ProcessRFIResponse", "Request")" id="compose-mail" class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Compose New Message</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <textarea name="PROPOSAL" id="compose-textarea" class="form-control" style="height: 300px"></textarea>
                            <input type="hidden" name="TEMPID" id="TEMPID" value="@ViewBag.TempNo" />
                        </div>
                        @*<div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fa fa-paperclip"></i> Attachment
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>*@
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Send</button>
                        </div>
                        @*<button type="reset" class="btn btn-default"><i class="fa fa-times"></i> Discard</button>*@
                    </div>
                    <!-- /.box-footer -->
                </form>
                <!-- /. box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section scripts{
    <script>
  $(function () {
    //Add text editor
      $("#compose-textarea").wysihtml5();

      $('#compose-mail').submit(function (e) {
          $route = $('#compose-mail')[0].action;
          $inbox = "@Url.Action("RFISummary", "Request", new { Temp = "-1" })";
          //$tempNo = $('#TEMP_ID').val();
          //$subject = $('#MAIL_SUBJECT').val();
          //$message = $('#compose-textarea').val();
          //var MessageViewModel = {
          //    TEMP_ID : $tempNo,
          //    MAIL_SUBJECT : $subject,
          //    MESSAGE_BODY: $message
          //}
          btn = "btn-success"
          $.ajax({
              type: 'POST',
              url: $route,
              data: $('#compose-mail').serialize(),
              success: function (data) {
                  //alert(data[0]);
                  $value = JSON.parse(data);
                  //alert($value);
                  if (typeof $value == 'number') {
                      swal({
                          title: "Done",
                          text: "Messsage Sent",
                          type: "success",
                          confirmButtonClass: btn,
                          confirmButtonText: 'Close',
                          closeOnConfirm: true,
                          closeOnCancel: false
                      },
                    function (IsConfirm) {
                        if (IsConfirm) {
                            $inbox = $inbox.replace("-1", data)
                            setTimeout(function () {
                                window.location.href = $inbox;
                            }, 1000);

                        }
                    });
                  } else {
                      swal("Something went wrong");
                  }
              }

          });
          e.preventDefault();
      })
  });
    </script>
}



