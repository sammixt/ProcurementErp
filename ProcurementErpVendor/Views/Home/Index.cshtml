@model IEnumerable<ProcurementErpVendor.Models.RequestViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3><br /></h3>

                        <p>RFI</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-information-outline"></i>
                    </div>
                    <a href="@Url.Action("RFILIst","Request")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3><br/><sup style="font-size: 20px"></sup></h3>

                        <p>RFQ</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-pricetags"></i>
                    </div>
                    <a href="@Url.Action("RFQList","Request")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3><br /></h3>

                        <p>RFP</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-timer-outline"></i>
                    </div>
                    <a href="@Url.Action("RFPList","Request")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3><br /></h3>

                        <p>Declined Request</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-redo"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">New Request</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Request Type</th>
                                    <th>Reference Number</th>
                                    <th>Start Date</th>
                                    <th>Due Date</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RequestType</td>
                                            <td>
                                                @item.ReferenceNumber
                                            </td>
                                            <td>@item.StartDate</td>
                                            <td>@item.DueDate</td>
                                            <td>X</td>
                                        </tr>
                                    }
                                }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <!-- Main row -->
        <!-- /.row (main row) -->

    </section>
    <!-- /.content -->
</div>
@section scripts {
<script src="@Url.Content("~/plugins/datatables/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/plugins/datatables/dataTables.bootstrap.js")"></script>   
    <script>
  $(function () { 
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
    }

