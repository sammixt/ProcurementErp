@model ProcurementErp.ViewModels.RFIRFPComboViewModel
@{
    ViewBag.Title = "RFPSummary";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header" id="RequestHistoryContainer">
        <h1>
            Request For Proposal Summary
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="">New Request</li>
            <li class="active">RFI</li>
        </ol>
    </section>
    <section class="content" id="Roles">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <p class="text-bold" style="text-transform:uppercase">
                            Summary
                        </p>
                    </div>
                    <!--Req form II -->
                    <div class="box-body">
                        <div class="col-md-11 col-md-offset-1">

                            <div class="form-group col-md-12">
                                <div class="box-body">
                                    <table class="table table-bordered table-striped">
                                        <tr>
                                            <td colspan="2"><p class="text-center text-uppercase text-bold">request for proposal (rfp)</p></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <table style="width:100%">
                                                    <tr>
                                                        <th>Project Title</th>
                                                        <td>@Model.Request.PRJECT_TITLE</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Issue Date</th>
                                                        <td>@Model.Request.INITIATION_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td>
                                                <table style="width:100%">
                                                    <tr>
                                                        <th>Due Date</th>
                                                        <td>@Model.Request.DUE_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Due Time</th>
                                                        <td>
                                                            @Model.Request.DUE_TIME
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Reference Number</th>
                                                        <td>
                                                            @Model.RefNum.REF_NO
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th class="text-uppercase text-info">Introduction</th>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <label class="control-label">Brief overview of UBN</label>
                                                            <p class="form-control-static">@Model.Request.UBN_OVERVIEW</p>
                                                        </td>
                                                    </tr>

                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th class="text-uppercase text-info">Project Overview</th>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <label class="control-label">Project Objectives</label>
                                                            <p class="form-control-static">@Model.Request.PROJECT_OBJECTIVE</p>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <label class="control-label">Scope of Work</label>
                                                            <p class="form-control-static">@Model.Request.WORK_SCOPE</p>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th colspan="2" class="text-uppercase text-info">TECHNICAL CONTACT PERSON</th>
                                                    </tr>
                                                    <tr>
                                                        <td>NAME</td>
                                                        <td>
                                                            @Model.Technical.NAME
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>DESIGNATION</td>
                                                        <td>
                                                            @Model.Technical.DESIGNATION
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>DEPARTMENT</td>
                                                        <td>
                                                            @Model.Technical.DEPARTMENT
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>TELEPHONE</td>
                                                        <td>
                                                            @Model.Technical.TELEPHONE
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>EMAIL</td>
                                                        <td>
                                                            @Model.Technical.EMAIL
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td>
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th colspan="2" class="text-uppercase text-info">COMMERCIAL CONTACT PERSON</th>
                                                    </tr>
                                                    <tr>
                                                        <td>NAME</td>
                                                        <td>
                                                           @Model.Commercial.NAME
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>DESIGNATION</td>
                                                        <td>
                                                            @Model.Commercial.DESIGNATION
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>DEPARTMENT</td>
                                                        <td>
                                                            @Model.Commercial.DEPARTMENT
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>TELEPHONE</td>
                                                        <td>
                                                            @Model.Commercial.TELEPHONE
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>EMAIL</td>
                                                        <td>
                                                            @Model.Commercial.EMAIL
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th colspan="2" class="text-uppercase text-info">rfp timelines</th>
                                                    </tr>
                                                    <tr>
                                                        <td>Date of Issue</td>
                                                        <td>@Model.Request.ISSUE_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Last Date for receipt of Queries</td>
                                                        <td>@Model.Request.LST_QRY_RECEIPT_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Last date for bank's response to Queries</td>
                                                        <td>@Model.Request.LST_RPF_RECPT_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Date of receipt of response to RFP</td>
                                                        <td>@Model.Request.BANK_QRY_RES_DATE.Value.ToShortDateString()</td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th colspan="4" class="text-uppercase text-bold text-info">commercial proposal template</th>
                                                    </tr>
                                                    <tr>
                                                        <th>Item No.</th>
                                                        <th>Quantity</th>
                                                        <th>Unit of Measurement</th>
                                                        <th>Goods & Services Description</th>
                                                    </tr>
                                                    @if (Model.Item != null)
                                                        {
                                                            int count = 1;
                                                            foreach (var item in Model.Item)
                                                            {
                                                                <tr>
                                                                    <td>@count</td>
                                                                    <td>@item.QUANTITY</td>
                                                                    <td>@item.UNIT_OF_MEAS</td>
                                                                    <td>@item.DESCRIPTION</td>
                                                                </tr>
                                                                count++;
                                                            }
                                                        }
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <table class="table table-bordered table-striped">
                                                    <tr>
                                                        <th colspan="3" class="text-uppercase text-bold text-info">Vendors Details</th>
                                                    </tr>
                                                    <tr>
                                                        <th>S/N</th>
                                                        <th>Vendor Name</th>
                                                        <th>Vendor Email</th>
                                                    </tr>
                                                    @if (Model.Vendors != null)
                                                        {
                                                            int _count = 1;
                                                            foreach (var vend in Model.Vendors)
                                                            {
                                                                <tr>
                                                                    <td>@_count</td>
                                                                    <td>@vend.VENDOR_NAME</td>
                                                                    <td>@vend.AUTO_EMAIL</td>
                                                                </tr>
                                                                _count++;
                                                            }
                                                        }
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" class="text-center"><a href="@Url.Action("EligibleBidders", "Terms")" data-toggle="modal" data-target="#modal-warning" class="btn btn-warning">ELIGIBLE BIDDERS/CONSORTIA</a></td>
                                        </tr>
                                    </table>

                                </div>
                                @if (ViewBag.ShowSubmit == null)
                                {
                                    <div class="form-group col-md-4 col-md-offset-4">
                                        <a href="@Url.Action("EditRFPForm", "UpdateRequest", new { TempId = Model.Request.TEMP_ID })" class="btn btn-danger pull-left">Edit Request</a>
                                        <button type="submit" id="SubmitSummary" class="btn btn-primary pull-right">Contact Vendors</button>
                                        <div class="clearfix"></div>
                                    </div>
                                }
                                else if (ViewBag.ShowSubmit == "contactVendor")
                                {
                                    <div class="form-group col-md-4 col-md-offset-4">
                                        <button type="submit"  onclick="ContactVendorForUpdates(this)" class="btn btn-primary"><span id="alertVendorOnUpdate">Contact Vendors</span></button>
                                    </div>
                                    <div class="clearfix"></div>
                                }
                                
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>
@section scripts {
    <script src="~/JsFiles/SubmitSummary.js"></script>
}
<!-- Modal popup-->
<div class="modal modal-warning fade" id="modal-warning">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Warning Modal</h4>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
